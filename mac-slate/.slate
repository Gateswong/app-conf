config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf windowSize

# Resize Bindings
bind =:shift,cmd resize +10% 0
bind -:shift,cmd resize -10% 0

bind =:shift,ctrl,cmd resize 0 +10%
bind -:shift,ctrl,cmd resize 0 -10%

bind =:shift,alt,cmd resize +50% 0
bind -:shift,alt,cmd resize -25% 0

bind =:shift,ctrl,alt,cmd resize 0 +50%
bind -:shift,ctrl,alt,cmd resize 0 -25%

bind ]:backslash,shift,cmd push top bar-resize:screenSizeY

bind left:backslash,shift,cmd push left bar-resize:screenSizeX/2
bind right:backslash,shift,cmd push right bar-resize:screenSizeX/2
bind up:backslash,shift,cmd push up bar-resize:screenSizeY/2
bind down:backslash,shift,cmd push down bar-resize:screenSizeY/2

bind 1:backslash,shift,cmd throw 0
bind 2:backslash,shift,cmd throw 1
bind 3:backslash,shift,cmd throw 2
bind 4:backslash,shift,cmd throw 3

bind p:backslash,shift,cmd corner top-left resize:screenSizeX/2;screenSizeY/2
bind [:backslash,shift,cmd corner top-right resize:screenSizeX/2;screenSizeY/2
bind ;:backslash,shift,cmd corner bottom-left resize:screenSizeX/2;screenSizeY/2
bind ':backslash,shift,cmd corner bottom-right resize:screenSizeX/2;screenSizeY/2

bind i:backslash,shift,cmd corner top-left resize:screenSizeX/2;screenSizeY*2/3
bind o:backslash,shift,cmd corner top-right resize:screenSizeX/2;screenSizeY*2/3
bind k:backslash,shift,cmd corner bottom-left resize:screenSizeX/2;screenSizeY/3
bind l:backslash,shift,cmd corner bottom-right resize:screenSizeX/2;screenSizeY/3

bind y:backslash,shift,cmd corner top-left resize:screenSizeX/2;screenSizeY/3
bind u:backslash,shift,cmd corner top-right resize:screenSizeX/2;screenSizeY/3
bind h:backslash,shift,cmd corner bottom-left resize:screenSizeX/2;screenSizeY/3*2
bind j:backslash,shift,cmd corner bottom-right resize:screenSizeX/2;screenSizeY/3*2

